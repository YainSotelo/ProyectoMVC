@model IEnumerable<Otaku.Core.Genero> 
@{
    Layout = null;
}

<html>
    <body>
<h1>Generos</h1>
<table>
    <thead>
    <td>Nombre</td>
    </thead>
    <tbody>
    @foreach (Otaku.Core.Genero genero in Model)
    {
        <tr>
        <td>
        <a asp-controller="Genero" asp-action="Detalle" asp-route-id="@genero.Id">@genero.Nombre</a> 
        </td>
        </tr>
    }
    </tbody>
</table>
<button type="submit">
<div >
    <a asp-action="FormAlta"> Ingresar Genero</a>
</div>
</button>
<button type="submit">
<div >
    <a  asp-controller="home" asp-action="Index"> Inicio </a>
</div>
</button>
    </body>
</html>