@model IEnumerable<Otaku.Core.Anime> 
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Animes</title>
</head>
<body>
    @foreach (Otaku.Core.Anime anime in Model)
    {
    <tr>
            <td>
                <a asp-controller="Anime" asp-action="Detalle" asp-route-id="@anime.Id">@anime.Nombre</a>
            </td>
     </tr>
    }
    <button type="submit">
       <a asp-action="FormAlta">Alta Anime</a>
       </button>
    <button type="submit">
    <a asp-controller="Home" asp-action="Index"> atras </a>
</button>
</body>
</html>