@using Otaku.Core;
@using Otaku.MVC.ViewModels;
@model VMAnime;
@{
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>
    <title>Anime</title>
</head>

<body>
    <form asp-action="FormAlta" method="post">
        <div asp-validation-summary="All"></div>
        <div>
            <label asp-for="@Model.Anime.Nombre">Nombre:</label>
            <input asp-for="@Model.Anime.Nombre" />
        </div>
        <div>
            <label asp-for="@Model.Anime.Genero">Genero:</label>
            <input asp-for="@Model.Anime.Genero">
        </div>
        <div>
            <label asp-for="@Model.Anime.Descripcion">Descripcion:</label>
            <input asp-for="@Model.Anime.Descripcion">
        </div>
        <select asp-for="IdGeneroSeleccionado">
            <option value="">Elegi una opci√≥n</option>
            @foreach (Genero genero in Model.generos)
            {
                <option value="@genero.Id">@genero.Nombre</option>
            }
        </select>
        <button type="submit">Agregar Anime</button>
        <button type="submit">
            <a  asp-controller="Juego" asp-action="Index">atras</a>
        </button>
    </form>
</body>
</html>